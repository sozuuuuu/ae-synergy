<div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">ログイン</h1>

  <%= form_with url: login_path, method: :post, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.submit "ログイン", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <p class="text-gray-600">
      アカウントをお持ちでない方は
      <%= link_to "新規登録", new_user_path, class: "text-indigo-600 hover:text-indigo-800" %>
    </p>
  </div>
</div>
