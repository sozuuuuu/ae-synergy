<% comment ||= Comment.new %>
<% commentable_type = commentable.class.name.underscore %>
<% route_helper = "#{commentable_type}_comments_path" %>

<div id="comments_<%= commentable_type %>_<%= commentable.id %>_form" class="bg-white rounded-lg shadow-md p-6">
  <%= form_with(model: [commentable, comment], data: { turbo_frame: "_top" }) do |f| %>
    <% if comment.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded p-3 mb-4">
        <p class="text-red-800 font-semibold">コメントを投稿できませんでした</p>
        <ul class="list-disc list-inside text-red-700 text-sm mt-1">
          <% comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :body, "コメント", class: "block text-sm font-semibold text-gray-700 mb-2" %>
      <%= f.text_area :body, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent", placeholder: "コメントを入力..." %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "コメントを投稿", class: "bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-lg font-semibold" %>
    </div>
  <% end %>
</div>
